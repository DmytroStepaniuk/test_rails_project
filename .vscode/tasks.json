{
  // Open the root folder in VS Code and use ctrl + shift + b (default shortcut) or
  // run Tasks: Run Build Tasks
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PG: Create databases",
      "type": "shell",
      "command": "bundle exec rails db:create",
      "group": {
        "kind": "build"
      },
      "options": {
        "env": {
          "DEVCONTAINER": "true"
        }
      },
      "detail": "Create DEV and test databases if not exists yet."
    },
    {
      "label": "PG: Create dump",
      "type": "shell",
      "command": "pg_dump -F c -v -h test_rails_project__postgresql -d test_rails_project_development -U user > dump.sql",
      "group": {
        "kind": "build"
      },
      "options": {
        "env": {
          "DEVCONTAINER": "true",
          "PGPASSWORD": "password"
        }
      },
      "detail": "Create DEV db dump."
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "description": "Enter migration name. Use PascalNamingConvention for that. Will create file like timestamp_pascal_namining_convention.",
      "type": "promptString"
    },
  ]
}
